<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "input", placeholder: "Enter your email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", required: true, class: "input", placeholder: "Enter your password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="remember_me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <%= f.submit "Log in", class: "btn-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
